@model Login

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<form asp-action="LoginUser" asp-controller="Login" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" width="200px" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" width="200px" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="RememberMe"></label>
        <input asp-for="RememberMe" width="200px" type="checkbox" class="form-control" />
        <span asp-validation-for="RememberMe" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Login</button>

    @Html.ActionLink("Signup", "Signup", "Login")
</form>

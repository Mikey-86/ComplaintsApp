@model Signup

@{
    ViewData["Title"] = "Signup";
}

<h1>Signup</h1>
<br />
<h2>Please enter your details below to signup</h2>

<form asp-action="SignupUser" asp-controller="Login" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" width="200px" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" width="200px" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Signup</button>
</form>

@model List<Complaint>

@{
}

<style>
    .table {
        width: 100%;
        border-collapse: collapse;
    }

    .table th, .table td {
        padding: 8px;
        border-bottom: 1px solid #ddd;
    }

    .table tbody tr:hover {
        background-color: #f5f5f5;
    }

    .table tbody tr {
        cursor: pointer;
    }
</style>

<h1>List of Complaints</h1>

@if (Model.Count == 0)
{
    <p>No objects found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Mobile Number</th>
                <th>Complaint Details</th>
                <th>IP Address</th>
                <th>Date Created</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr onclick="window.location.href='@Url.Action("ComplaintDetails", "Complaints", new { id = item.ID })'">
                    <td>@item.ID</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Email</td>
                    <td>@item.MobileNumber</td>
                    <td>@item.ComplaintDetails</td>
                    <td>@item.IPAddress</td>
                    <td>@item.CreatedDate</td>
                </tr>
            }
        </tbody>
    </table>
}

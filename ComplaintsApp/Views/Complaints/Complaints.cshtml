@model ComplaintsApp.Models.Complaint

@{
    ViewData["Title"] = "Submit Complaint";
}

<h2>Submit Complaint</h2>

<form asp-action="SubmitComplaint" asp-controller="Complaints" method="post" class="form-horizontal">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="FirstName" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group">
        <label asp-for="LastName" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="MobileNumber" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="MobileNumber" class="form-control" />
            <span asp-validation-for="MobileNumber" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="ComplaintDetails" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="ComplaintDetails" class="form-control" />
            <span asp-validation-for="ComplaintDetails" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="IPAddress" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="IPAddress" class="form-control" />
            <span asp-validation-for="IPAddress" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="CreatedDate" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="CreatedDate" class="form-control" />
            <span asp-validation-for="CreatedDate" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Create</button>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


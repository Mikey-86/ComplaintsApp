@model Complaint

@{
}

<style>
    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 8px;
            border-bottom: 1px solid #ddd;
        }

        .table tbody tr:hover {
            background-color: #f5f5f5;
        }

        .table tbody tr {
            cursor: pointer;
        }
</style>

<h1>Complaint Details</h1>

@if (Model == null)
{
    <p>No object data found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Mobile Number</th>
                <th>Complaint Details</th>
                <th>IP Address</th>
                <th>Date Created</th>
            </tr>
        </thead>
        <tbody>
                <tr>
                    <td>@Model.ID</td>
                    <td>@Model.FirstName</td>
                    <td>@Model.LastName</td>
                    <td>@Model.Email</td>
                    <td>@Model.MobileNumber</td>
                    <td>@Model.ComplaintDetails</td>
                    <td>@Model.IPAddress</td>
                    <td>@Model.CreatedDate</td>
                </tr>
        </tbody>
    </table>
}